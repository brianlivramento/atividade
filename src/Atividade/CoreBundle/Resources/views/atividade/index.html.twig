{% extends 'base.html.twig' %}

{% block title %}
    Módulo - Atividades
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12" style="margin-top:80px;">
    		<h1>Tabela de atividades</h1>
    	</div>
    	<hr />
		<div class="col-lg-12">			
		    <table class="table table-bordered">
			    <thead>
			      <tr>
			      	<th>Id</th>
			        <th>Descrição</th>
			        <th>Ações</th>
			      </tr>
			    </thead>
			    <tbody>
				{% if atividades is not empty %}
					{% for a in atividades %}
				      <tr>
				      	<td>{{ a.id }}</td>
				        <td>{{ a.descricao }}</td>
				        <td>
				        	<form method="get" action="{{ path('del') }}">
				        		<input type="hidden" name="id" value="{{ a.id }}" >
				        		<button type="submit" class="btn btn-default btn-sm">Apagar</button>
				        	</form>
				        </td>
				      </tr>
					{% endfor %}
				{% endif %}
			    </tbody>
			</table>			
		</div>
		<hr />
	</div>	
	<div class="row">	
		<div class="col-lg-12">
			<div class="alert alert-info">Clique para adicionar uma nova atividade.</div>
		</div>
		<div class="col-lg-12">
			<form class="form-control" method="post" style="padding:30px; height: auto; padding-bottom:100px;" action="{{ path('add') }}">
				<h3>Informe a descrição</h3>
				<div class="form-group">
					<input class="form-control" name="input-descricao" type="text" placeholder="Descrição da atividade" required>
					<hr />
